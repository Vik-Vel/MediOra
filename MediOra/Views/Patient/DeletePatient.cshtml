@model PatientViewModel
@{
    ViewData["Title"] = "Delete confirmation";
}

<h2>Are you sure you want to delete this patient?</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FullName</h4>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>
<br />
<form asp-action="ConfirmDeletePatient" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageAllPatients" class="btn btn-secondary">Cancel</a>
</form>
