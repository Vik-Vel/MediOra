@model IEnumerable<DoctorViewModel>

@{
    ViewBag.Title = "Manage Doctors";
}

<h2 class="text-center mb-4">Manage Doctors</h2>

<a href="@Url.Action("AddDoctor", "Doctor")" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Add New Doctor
</a>

<table class="table table-hover">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>City</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>Dr. @doctor.FirstName @doctor.LastName</td>
                <td>@doctor.SpecialtyName</td>
                <td>@doctor.City</td>
                <td>@doctor.Email</td>
                <td>
                    <a href="@Url.Action("EditDoctor", "Doctor", new { id = doctor.Id })" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="@Url.Action("DetailsDoctor", "Doctor", new { id = doctor.Id })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a href="@Url.Action("DeleteDoctor", "Doctor", new { id = doctor.Id })" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
