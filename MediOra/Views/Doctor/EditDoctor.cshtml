@model DoctorEditViewModel

<h2>Edit Doctor</h2>

<form asp-action="EditDoctor" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SpecialtyId"></label>
        <select asp-for="SpecialtyId" class="form-control">
            @foreach (var specialty in Model.Specialties)
            {
                <option value="@((int)specialty)" selected="@(specialty == (DoctorSpecialtyEnum)Model.SpecialtyId)">
                    @(specialty.GetType().GetField(specialty.ToString())
                        .GetCustomAttributes(typeof(DisplayAttribute), false)
                        .FirstOrDefault() is DisplayAttribute display ? display.Name : specialty.ToString())
                </option>
            }
        </select>
        <span asp-validation-for="SpecialtyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
