@model DoctorViewModel
@{
    ViewData["Title"] = "Потвърждение за изтриване";
}

<h2>Are you sure you want to delete this doctor?</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <p><strong>Specialty:</strong> @Model.SpecialtyName</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>
<br />
<form asp-action="ConfirmDeleteDoctor" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageAllDoctors" class="btn btn-secondary">Cancel</a>
</form>
