@model DoctorCreateViewModel

@{
    ViewBag.Title = "Add New Doctor";
}

<h2 class="text-center mb-4">Add a New Doctor</h2>

<form asp-action="AddDoctor" method="post">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" type="url" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SpecialtyId" class="form-label"></label>
        <select asp-for="SpecialtyId" asp-items="@(new SelectList(Model.Specialties, "Id", "Name"))" class="form-control">
            <option value="">-- Select Specialty --</option>
        </select>
        <span asp-validation-for="SpecialtyId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Doctor</button>
    <a asp-action="ManageAllDoctors" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
